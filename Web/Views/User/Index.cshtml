@model IEnumerable<Domain.Entities.User>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th class="text-left">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    var item1 = item;
    <tr>
        <td class="text-left">
            @Html.DisplayFor(modelItem => item1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item1.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item1.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item1.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item1.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item1.Role.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
